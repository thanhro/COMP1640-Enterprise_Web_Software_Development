@model sb_admin_2.Web.Models.MultipleModelInOneView_List
@{
    ViewBag.Title = "View_Detail_Document";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="stylesheet" type="text/css" href="~/bower_components/bootstrap/dist/css/bootstrap.min.css" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Documents and Images in Contribution</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Table Images
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var img in Model.images)
                                {
                                    <tr>
                                        <td><img src="@Url.Content(img.Path)" style="width: 100px; height: 100px;" /></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Table Documents
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Document</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var doc in Model.documents)
                                {
                                    <tr>
                                        <td><a href="@Url.Action("Download", "Student", new { DocumentID = doc.DocumentID })">@doc.Path.Replace("~/Files/", "")</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Old Comments
                </div>
                <div class="panel-body">
                    <div class="col-lg-2">
                        @foreach (var user in Model.users)
                        {
                            <b>@user.Name (said): </b><br />
                        }
                    </div>

                    @foreach (var comment in Model.comments)
                    {
                        <div class="col-lg-7">
                            @comment.Content<br />
                        </div>
                        <div class="col-lg-3">
                            @comment.CommentDate<br />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>

