@model IEnumerable<sb_admin_2.Web.Models.Document>

@{
    ViewBag.Title = "View Student Files";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="stylesheet" type="text/css" href="~/bower_components/bootstrap/dist/css/bootstrap.min.css" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">My Files Uploaded</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-6">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                @if (item.Contribution1.Status == 1)
                                {
                                    <i class="fa fa-lock"></i>
                                }
                                else
                                {
                                    <i class="fa fa-unlock-alt"></i>
                                }
                            </div>
                            <div class="col-xs-9 text-right">
                                @if (item.Contribution1.Status == 1)
                                {
                                <div style="font-size: 15px; color: #f36868;">Not Public</div>
                                }
                                else
                                {
                                <div style="font-size: 15px; color: #fce24e;">Public</div>
                                }
                                <div>@Html.DisplayFor(modelItem => item.Contribution1.Title)</div>
                            </div>
                        </div>
                    </div>
                    <a href="@Url.Action("View_Detail", "Student", new { DocumentID = item.DocumentID})">
                        <div class="panel-footer">
                            <span class="pull-left">View Details</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</body>
</html>

