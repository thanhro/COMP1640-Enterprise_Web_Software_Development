@model IEnumerable<sb_admin_2.Web.Models.Faculty_Detail>
@{
    ViewBag.Title = "View_Faculty";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="stylesheet" type="text/css" href="~/bower_components/bootstrap/dist/css/bootstrap.min.css" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">My Faculties</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        @{int i = 0; }
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-6">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-lock"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div style="font-size: 15px; color: #f36868;">@ViewBag.countDocument[i]</div>
                                <div>@item.Faculty.FacultyName</div>
                            </div>
                        </div>
                    </div>
                    <a href="@Url.Action("View_Detail_Faculty", "ManageCoordinator", new { Faculty_DetailID = item.Faculty_DetailID })">
                        <div class="panel-footer">
                            <span class="pull-left">View Details</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
            i++;
        }
    </div>
</body>
</html>

