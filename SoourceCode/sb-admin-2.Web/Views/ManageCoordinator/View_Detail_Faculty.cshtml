@model IEnumerable<sb_admin_2.Web.Models.Contribution>
@{
    ViewBag.Title = "View_Detail_Faculty";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="stylesheet" type="text/css" href="~/bower_components/bootstrap/dist/css/bootstrap.min.css" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
    @if (@ViewBag.Success != null)
    {
        <div style="width: 30%; margin:auto; margin-top: 2%;" class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            @ViewBag.Success
        </div>
    }
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Contributions in Faculties</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    DataTables Contributions
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>UserName</th>
                                    <th>Category</th>
                                    <th>Title</th>
                                    <th>Final Closure Date</th>
                                    <th>Document</th>
                                    <th>Image</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="odd gradeX">
                                        <td>@item.User.Name</td>
                                        <td>@item.Category1.CategoryName</td>
                                        <td>@item.Title</td>
                                        <td class="center">@item.Category1.FinalClosureDate</td>
                                        <td class="center">@item.Documents.Count</td>
                                        <td class="center">@item.Images.Count</td>
                                        <td class="center">
                                            <a href="@Url.Action("View_Detail_Document", "ManageCoordinator", new { ContributionID = item.ContributionID })" class="fa fa-folder-open-o" style="font-size: 24px;"></a>
                                            @if (item.Status == 1)
                                            {
                                                <a href="@Url.Action("Publish", "ManageCoordinator", new { Faculty_DetailID = item.Category1.Faculty_DetailID, ContributionID = item.ContributionID })" class="fa fa-lock" style="font-size: 24px; float: right;"></a>
                                            }
                                            else
                                            {
                                                <a href="#" class="fa fa-unlock" style="font-size: 24px; float: right;"></a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
</body>
</html>

